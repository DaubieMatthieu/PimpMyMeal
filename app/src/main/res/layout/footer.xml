<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="bottom"
    android:weightSum="4">

    <ImageButton
        android:id="@+id/homeButtonNavigation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_custom_navigation"
        android:backgroundTintMode="add"
        android:onClick="GoToHomeActivity"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_home_24"
         />

    <ImageButton
        android:id="@+id/recipeButtonNavigation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_custom_navigation"
        android:onClick="GoToGeneratorActivity"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        android:textSize="11sp"
        />

    <ImageButton
        android:id="@+id/fridgeButtonNavigation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_custom_navigation"
        android:onClick="GoToSearchActivity"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_local_dining_24"
        />

    <ImageButton
        android:id="@+id/userButtonNavigation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_custom_navigation"
        android:onClick="GoToProfileActivity"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_account_circle_24" />
</LinearLayout>