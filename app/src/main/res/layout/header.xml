<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="top"
    android:background="@drawable/button_custom_navigation"
    android:orientation="horizontal"
    android:weightSum="5">

    <ImageView
        android:id="@+id/logoButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_custom_navigation"
        android:contentDescription="@string/logo_image"
        
        android:scaleType="fitCenter"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@mipmap/logo_header_updated" />

    <View
        android:id="@+id/headerEmptySpace"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

    <ImageButton
        android:id="@+id/optionsButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_custom_navigation"
        android:contentDescription="@string/header_menu_button"
        android:onClick="signUpBackClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_menu_24" />

</LinearLayout>
